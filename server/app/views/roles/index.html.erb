<h1>Listing roles</h1>
<%= @role %>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Access</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.title %></td>
    <td><%= role.description %></td>
    <td><%= $role_access_labels[role.access] %></td>
    <td><%= link_to 'Show', role %></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Destroy', role, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @roles %>

<%= link_to 'New Role', new_role_path, :class => 'greenbutton' %>
