<%= form_for(@calendar) do |f| %>
  <% if @calendar.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@calendar.errors.count, "error") %> prohibited this calendar from being saved:</h2>

      <ul>
      <% @calendar.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br />
    <%= select("calendar","user_id", User.all.collect {|p| [ p.fullname, p.id ]}, :selected => params[:user_id] ) %>
  </div>
  <div class="field">
    <%= f.label :patient_id %><br />
    <%= select("calendar","patient_id", Patient.all.collect {|p| [ "#{p.dni} #{p.firstname} #{p.lastname}", p.id ]}, :selected => params[:patient_id] ) %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.datetime_select :date,:start_date => Time.now, :start_year => Time.now.year, 
    :end_year => Time.now.year + 10, :minute_step => 5, :order => [:day, :month, :year, :hour, :minute] %>
  </div>
  <div class="field">
    <%= f.label :date_type %><br />
      <%= f.select :date_type,  {"Medical Consultation" => "mc", "Date" => "dt"} %>
  </div>
  <div class="field">
    <%= f.label :result %><br />
    <%= f.text_area :result %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'greenbutton' %>
  </div>
<% end %>