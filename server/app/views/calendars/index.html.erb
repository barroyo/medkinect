<h1>Listing calendars</h1>

<table>
  <tr>
    <th>User</th>
    <th>Patient</th>
    <th>Date</th>
    <th>Type</th>
    <th>Retult</th>
    <th>Status</th>
    <th>Actions</th>

  </tr>

<% @calendars.each do |calendar| %>
  <tr>
    <td><%= calendar.user.fullname %></td>
    <td><%= calendar.patient.fullname %></td>
    <td><%= calendar.date %></td>
    <td><%= calendar.date_type %></td>
    <td><%= calendar.result %></td>
    <td><%= calendar.status %></td>
    <td><%= link_to 'Show', calendar, :class=>"nicebutton" %>
    <%= link_to 'Edit', edit_calendar_path(calendar), :class=>"greybutton" %>
    <%= link_to 'Destroy', calendar, confirm: 'Are you sure?', method: :delete, :class=>"redbutton" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Calendar', new_calendar_path, :class=>"classname" %>
